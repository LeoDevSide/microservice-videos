generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  description String?
  is_active   Boolean
  created_at  DateTime @default(now())

  @@map("categories")
}

enum CastMemberType {
  ACTOR
  DIRECTOR
}

model CastMember {
  id         String         @id @default(uuid())
  name       String
  type       CastMemberType
  created_at DateTime       @default(now())

  @@map("cast_members")
}
